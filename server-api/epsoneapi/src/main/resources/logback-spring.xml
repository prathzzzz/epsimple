<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- Properties -->
    <property name="LOG_PATH" value="./logs"/>
    <property name="ARCHIVE_PATH" value="${LOG_PATH}/archive"/>
    
    <!-- Create directories if they don't exist -->
    <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" />
    
    <!-- Console Pattern for Development -->
    <property name="CONSOLE_LOG_PATTERN" 
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %highlight(%-5level) [%X{requestId:-NO_REQUEST_ID}] %cyan(%logger{36}) - %msg%n"/>
    
    <!-- File Pattern with MDC context (requestId, httpMethod, requestURI) -->
    <property name="FILE_LOG_PATTERN" 
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{requestId:-NO_REQUEST_ID}] [%X{httpMethod}] [%X{requestURI}] %logger{36} - %msg%n"/>
    
    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- Application Log File Appender -->
    <appender name="APPLICATION_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/application.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${ARCHIVE_PATH}/application-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
			<maxFileSize>100MB</maxFileSize>
			<maxHistory>30</maxHistory>
			<totalSizeCap>10GB</totalSizeCap>
			<cleanHistoryOnStart>true</cleanHistoryOnStart>
		</rollingPolicy>
    </appender>
    
    <!-- Async Appender for better performance -->
    <appender name="ASYNC_APPLICATION" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <neverBlock>false</neverBlock>
        <appender-ref ref="APPLICATION_FILE"/>
    </appender>
    
    <!-- Disable repository scanning logs -->
    <logger name="org.springframework.data.repository.config.RepositoryConfigurationDelegate" level="ERROR"/>
    <logger name="org.springframework.data.repository" level="WARN"/>
    <logger name="org.springframework.boot.autoconfigure" level="WARN"/>
    <logger name="org.springframework.context.annotation" level="WARN"/>
    <logger name="org.springframework.data.repository.config.RepositoryComponentProvider" level="ERROR"/>
    <logger name="org.springframework.data.repository.core.support.RepositoryFactorySupport" level="ERROR"/>
    
    <!-- Dev Profile Configuration -->
    <springProfile name="dev">
        <logger name="com.eps.module" level="DEBUG"/>
        <logger name="com.eps.module.auth" level="DEBUG"/>
        <logger name="com.eps.module.crypto" level="DEBUG"/>
        <logger name="org.hibernate.SQL" level="DEBUG"/>
        <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>
        <logger name="org.springframework.security" level="DEBUG"/>
        <logger name="org.springframework.web" level="DEBUG"/>
        
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_APPLICATION"/>
        </root>
    </springProfile>
    
    <!-- Prod Profile Configuration -->
    <springProfile name="prod">
        <!-- Application modules - INFO level only, no DEBUG -->
        <logger name="com.eps.module" level="INFO"/>
        <logger name="com.eps.module.auth" level="INFO"/>
        <logger name="com.eps.module.crypto" level="INFO"/>
        <logger name="com.eps.module.auth.config.security" level="INFO"/>
        <logger name="com.eps.module.auth.rbac" level="INFO"/>
        
        <!-- Frameworks - WARN level to reduce noise -->
        <logger name="org.hibernate.SQL" level="WARN"/>
        <logger name="org.springframework" level="WARN"/>
        <logger name="org.springframework.security" level="WARN"/>
        <logger name="org.springframework.web" level="WARN"/>
        
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_APPLICATION"/>
        </root>
    </springProfile>
    
    <!-- Default Profile Configuration (fallback) -->
    <springProfile name="!dev &amp; !prod">
        <logger name="com.eps.module" level="INFO"/>
        
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_APPLICATION"/>
        </root>
    </springProfile>
    
</configuration>

